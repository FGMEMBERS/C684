  <electrical>
    <file>Aircraft/C684/Nasal/electrical.nas</file>
  </electrical>
  <fuel>
    <file>Aircraft/C684/Systems/fuel.nas</file>
  </fuel>
  <controls>
    <file>Aircraft/C684/Systems/controls.nas</file>
  </controls>
-->
  <C684>
    <file>Aircraft/C684/Nasal/C684.nas</file>
  </C684>
</nasal>

</PropertyList>
