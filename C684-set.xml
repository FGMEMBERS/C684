<?xml version="1.0"?>

<PropertyList>

<sim>
  <description>Caudron C.684 Super Rafale</description>
  <author>Guillaume Chauvat, Laurent Hayvel (texture)</author>
  <status>beta (0.3.0)</status>
  <help>
    <key>
      <name>g</name>
      <desc>Switch propeller to high pitch</desc>
    </key>
    <key>
      <name>G</name>
      <desc>Switch propeller to low pitch (on ground and engine stopped)</desc>
    </key>
    <title>Caudron C684</title>
    <line>____________________Procedures____________________</line>
    <line></line>
    <line>Startup:</line>
    <line>  Battery: on</line>
    <line>  Magnetos: both</line>
    <line>  Starter (5 seconds maxi)</line>
    <line></line>
    <line>Before Takeoff:</line>
    <line>  Flaps: 15 deg</line>
    <line></line>
    <line>Takeoff:</line>
    <line>  Apply full power</line>
    <line>  Lift tail wheel at 100 km/h</line>
    <line>  Takeoff at 130 km/h</line>
    <line>  Climb at 150 km/h</line>
    <line>  Flaps: 0 deg</line>
    <line></line>
    <line>Cruise:</line>
    <line>  Pitch: high (g)</line>
    <line>  2300 rpm</line>
    <line>  250 km/h</line>
    <line>Downwind:</line>
    <line>  Speed: 160 km/h</line>
    <line>  Flaps: 15 deg</line>
    <line></line>
    <line>Final:</line>
    <line>  Flaps: 40 deg</line>
    <line>  Speed: 140 km/h</line>
    <line>  WARNING! you can NOT takeoff with high pitch,</line>
    <line>           do NOT try to go around!</line>
    <line></line>
    <line>At Parking:</line>
    <line>  Magnetos: off</line>
    <line>  Battery: off</line>
    <line>  Pitch: low</line>
  </help>

  <model>
    <path>Aircraft/C684/Models/C684-model.xml</path>
  </model>

  <flight-model>jsb</flight-model>
  <aero>C684</aero>
  <startup>
    <splash-texture>Aircraft/C684/splash.png</splash-texture>
  </startup>

  <flaps>
    <setting>0.0</setting>
    <setting>0.38</setting>
    <setting>1.0</setting>
  </flaps>
<!--
  <systems>
    <electrical>
      <path>Aircraft/C684/Systems/electrical.xml</path>
    </electrical>
  </systems>
-->
  <virtual-cockpit archive="y">true</virtual-cockpit>
  
  <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>
  
  <view>
    <!-- set true if you want 3d cockpit -->
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">0.00</x-offset-m>
      <y-offset-m archive="y">0.41</y-offset-m>
      <z-offset-m archive="y">0.55</z-offset-m>
      <pitch-offset-deg>-12</pitch-offset-deg>
    </config>
  </view>
  <sound>
    <path archive="y">Aircraft/C684/Sounds/C684-sound.xml</path>
  </sound>
</sim>
<!--
<consumables>
  <fuel>
    <tank n="1">
      <level-gal_us>50</level-gal_us>
    </tank>
    <tank n="2">
      <level-gal_us>50</level-gal_us>
    </tank>
  </fuel>
</consumables>
-->
<controls>
  <engines>
    <engine n="0">
      <propeller-pitch>0.0</propeller-pitch> <!-- start at low pitch -->
    </engine>
  </engines>
  <electric>
    <battery-switch>0</battery-switch>
  </electric>
</controls>

<input>
  <keyboard>
    <key n="103">
      <name>g</name>
      <desc>Switch propeller to high pitch</desc>
      <binding n="0">
        <command>nasal</command>
        <script>C684.setPitch(1);</script>
      </binding>
    </key>
    <key n="71">
      <name>G</name>
      <desc>Reset propeller pitch (on ground only)</desc>
      <binding n="0">
        <command>nasal</command>
        <script>C684.setPitch(-1);</script>
      </binding>
    </key>
    <key n="115">
      <name>s</name>
      <desc>Fire Starter on Selected Engine(s)</desc>
      <binding>
        <command>nasal</command>
        <script>C684.starter(1);</script>
      </binding>
      <mod-up>
        <binding>
        <command>nasal</command>
        <script>C684.starter(0);</script>
        </binding>               
      </mod-up>
    </key>    
  </keyboard>
</input>

<payload>
  <weight>
    <name type="string">Pilot</name>
    <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[0]"/>
    <min-lb type="double">0.0</min-lb>
    <max-lb type="double">250.0</max-lb>
  </weight>
  <weight>
    <name type="string">Passenger</name>
    <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[1]"/>
    <min-lb type="double">0.0</min-lb>
    <max-lb type="double">250.0</max-lb>
  </weight>
</payload>

<limits>
  <max-flap-extension-speed>
    <flaps>0.4</flaps>
    <speed>103</speed>
  </max-flap-extension-speed>
  <max-positive-g>3.5</max-positive-g>
  <max-negative-g>-1.5</max-negative-g>
  <vne>215</vne>
</limits>

<!-- Nasal files/scripts -->
<nasal>
