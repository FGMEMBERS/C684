<controls>
  <engines>
    <engine n="0">
      <propeller-pitch>0.0</propeller-pitch> <!-- start at low pitch -->
    </engine>
  </engines>
</controls>

<input>
  <keyboard>
    <key n="4">
      <name>Ctrl-D</name>
      <desc>Reset propeller pitch (on ground only)</desc>
      <binding n="0">
        <command>nasal</command>
        <script>C684.resetPitch();</script>
      </binding>
    </key>
  </keyboard>
</input>

<!-- Nasal files/scripts -->
<nasal>
