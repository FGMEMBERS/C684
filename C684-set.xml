<?xml version="1.0"?>
<PropertyList>

<sim>
  <description>Caudron C684 Super Rafale</description>
  <author>Guillaume Chauvat, Laurent Hayvel (texture)</author>
  <status>beta (0.1.0)</status>
  <help>
    <key>
      <name>Ctrl-D</name>
      <desc>Switch to low pitch (on ground and engine stopped)</desc>
    </key>
    <title>Caudron C684</title>
    <line>____________________Procedures____________________</line>
    <line></line>
    <line>Startup:</line>
    <line>  Magnetos: both</line>
    <line>  Starter (5 seconds maxi)</line>
    <line></line>
    <line>Before Takeoff:</line>
    <line>  Flaps: 15 deg</line>
    <line></line>
    <line>Takeoff:</line>
    <line>  Apply full power</line>
    <line>  Lift tail wheel at 100 km/h</line>
    <line>  Takeoff at 130 km/h</line>
    <line>  Climb at 150 km/h</line>
    <line>  Flaps: 0 deg</line>
    <line></line>
    <line>Cruise:</line>
    <line>  Full power</line>
    <line>  The pitch becomes high at 2750 rpm</line>
    <line>  2300 rpm</line>
    <line>  250 km/h</line>
    <line>Downwind:</line>
    <line>  Speed: 160 km/h</line>
    <line>  Flaps: 15 deg</line>
    <line></line>
    <line>Final:</line>
    <line>  Flaps: 40 deg</line>
    <line>  Speed: 140 km/h</line>
    <line></line>
    <line>At Parking:</line>
    <line>  Magnetos: off</line>
    <line>  Pitch: low</line>
  </help>

  <model>
    <path>Aircraft/C684/Models/C684-model.xml</path>
  </model>

  <flight-model>jsb</flight-model>
  <aero>C684</aero>
  <startup>
    <splash-texture>Aircraft/C684/splash.png</splash-texture>
  </startup>

  <flaps>
    <setting>0.0</setting>
    <setting>0.4</setting>
    <setting>1.0</setting>
  </flaps>
  
  
  <virtual-cockpit archive="y">true</virtual-cockpit>
  
  <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>
  
  <view>
    <!-- set true if you want 3d cockpit -->
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">0.00</x-offset-m>
      <y-offset-m archive="y">0.41</y-offset-m>
      <z-offset-m archive="y">0.55</z-offset-m>
      <pitch-offset-deg>-12</pitch-offset-deg>
    </config>
  </view>
  <sound>
    <path archive="y">Aircraft/C684/Sounds/C684-sound.xml</path>
  </sound>
</sim>
