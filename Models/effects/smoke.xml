<?xml version="1.0"?>

<PropertyList>

  <particlesystem>
    <name>smoke</name>
    <type>normal</type>

    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>

    <texture>smoke.png</texture>

    <emissive type="bool">false</emissive>
    <lighting type="bool">true</lighting>

    <condition>
      <greater-than>
        <property>controls/engines/engine[0]/faults/smoke</property>
        <value>0</value>
      </greater-than>
    </condition>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg>-30</theta-min-deg>
      <theta-max-deg>30</theta-max-deg>
      <phi-min-deg>-30</phi-min-deg>
      <phi-max-deg>30</phi-max-deg>
      <speed-mps>
        <value>15</value>
        <spread>3</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>-30</x-min-deg-sec>
        <y-min-deg-sec>-30</y-min-deg-sec>
        <z-min-deg-sec>-30</z-min-deg-sec>
        <x-max-deg-sec>30</x-max-deg-sec>
        <y-max-deg-sec>30</y-max-deg-sec>
        <z-max-deg-sec>30</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <property>controls/engines/engine[0]/faults/smoke</property>
        <factor>20</factor>
        <offset>0</offset>
        <spread>9</spread>
      </particles-per-sec>
    </counter>

    <particle>
      <start>
        <color>
          <red><value>   0.3 </value></red>
          <green><value> 0.3 </value></green>
          <blue><value>  0.3 </value></blue>
          <alpha><value> 0.3 </value></alpha>
        </color>
        <size>
          <value>0.3</value>
        </size>
      </start>

      <end>
        <color>
          <red><value>   0.4 </value></red>
          <green><value> 0.4 </value></green>
          <blue><value>  0.4 </value></blue>
          <alpha><value> 0.0 </value></alpha>
        </color>
        <size>
          <value>15.0</value>
        </size>
      </end>

      <life-sec>
        <value>8</value>
      </life-sec>

      <mass-kg>  0.02 </mass-kg>
      <radius-m> 0.2 </radius-m>
    </particle>

    <program>
      <fluid>               air  </fluid>
      <gravity type="bool"> true </gravity>
      <wind typ="bool">     true </wind>
    </program>

  </particlesystem>

</PropertyList>

